<step name="mutexSub" xmlns="http://www.jtstand.com/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.jtstand.com/ http://www.jtstand.com/jtstand-1.0.xsd">
    <script>
        Integer v = (Integer) VAR1;
        if (v == null){
            v = 1;
        }else{
            v = v + 1;
        }        
        try {
            Thread.sleep(50);
        } catch (InterruptedException ex) {
            System.out.println("Step was interrupted while sleeping 1");
        }
        VAR1 = v;
        try {
            Thread.sleep(50);
        } catch (InterruptedException ex) {
            System.out.println("Step was interrupted while sleeping 2");
        }
        value = v;
    </script>
</step>

