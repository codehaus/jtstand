<testSequence xmlns="http://www.jtstand.com/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="DemoSequence" xsi:schemaLocation="http://www.jtstand.com/ jtstand-1.0.xsd">
    <property name="DECIMAL_FORMAT" value="0.000"/>
    <limit name="the 1st step's limit" comp="GELE" lsl="-2.0" usl="4.0" unit="V">
        <remark>Set to plus-minus 3 sigma</remark>
    </limit>
    <mainStep name="RANDOM">
        <remark>&lt;html&gt;This step is the root of the main sequence&lt;br&gt;and another line&lt;/html&gt;</remark>
        <property name="AVERAGE" final="false">0.5 + 1.5</property>
        <step name="RANDOM1" useLimit="the 1st step's limit">
            <remark>This is the 1st real step</remark>
            <property name="AVERAGE">0.5 + 0.5</property>
            <script><![CDATA[
                println 'AVERAGE: ' + AVERAGE
                println 'AVERAGE: ' + step.getPropertyDouble('AVERAGE')
                step.setValue( AVERAGE + step.getPropertyDouble('SIGMA',1.0D) * (new java.util.Random()).nextGaussian() )
                ]]>
            </script>
        </step>
        <step name="RANDOM2">
            <script><![CDATA[
                System.out.println('AVERAGE: ' + AVERAGE)
                setVariable 'AVERAGE', AVERAGE * 2.0
                System.out.println('AVERAGE: ' + AVERAGE)
                AVERAGE = AVERAGE + 1.0;
                System.out.println('AVERAGE: ' + AVERAGE)
                setValue AVERAGE
                ]]>
            </script>
        </step>
        <step name="RANDOM3">
            <script><![CDATA[
                setValue AVERAGE
                ]]>
            </script>
        </step>
        <step name="This is a really long name" stepClass="com.jtstand.demo.TestRandom" failAction="LOOP" maxLoops="2">
            <property name="AVERAGE" value="2.1"/>
            <stepFile subversionUrl="demoStep.xml" revision="1"/>
        </step>
        <step name="group 1">
            <step name="group 2" parallel="true" message="This is an interesting group of steps">
                <step name="far1" stepClass="com.jtstand.demo.TestRandom">
                    <property name="AVERAGE" value="1"/>
                    <property name="SIGMA" value="1"/>
                    <limit comp="GELE" lsl="-2.0" usl="4.0"/>
                </step>
                <step name="far2" stepClass="com.jtstand.demo.TestRandom">
                    <property name="AVERAGE" value="1"/>
                    <property name="SIGMA" value="1"/>
                    <limit comp="GELE" lsl="-2.0" usl="4.0"/>
                </step>
                <step name="far3">
                    <script>
                        try {
                            Thread.sleep(500);
                        } catch (InterruptedException ex) {
                            step.getLogger().info("far3 was interrupted while sleeping");
                        }
                        step.abort();
                    </script>
                </step>
            </step>
        </step>
    </mainStep>
</testSequence>
