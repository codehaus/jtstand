    <property name="DECIMAL_FORMAT" value="0.000"/>
    <limit name="positive" comp="GE" lsl="0.0"/>
    <setupStep name="Setup" useLimit="positive">
        <property name="AVERAGE">0.0</property>>
        <script>step.setValue( step.getPropertyDouble(&quot;AVERAGE&quot;) + step.getPropertyDouble(&quot;SIGMA&quot;,1.0D) * (new java.util.Random()).nextGaussian() )</script>
    </setupStep>
    <mainStep name="Main">
    </mainStep>
    <cleanupStep name="Cleanup" useLimit="positive">
        <property name="AVERAGE">0.0</property>>
        <script>step.setValue( step.getPropertyDouble(&quot;AVERAGE&quot;) + step.getPropertyDouble(&quot;SIGMA&quot;,1.0D) * (new java.util.Random()).nextGaussian() )</script>
    </cleanupStep>
</testSequence>
