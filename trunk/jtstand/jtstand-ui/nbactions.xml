<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Djava.compiler=none -Xnoagent -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx256m -Xms256m -Xmn64m -classpath %classpath com.jtstand.swing.Main</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx256m -Xms256m -Xmn64m -classpath %classpath com.jtstand.swing.Main</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>        
    </actions>
